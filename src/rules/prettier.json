{
    "prettier/prettier": [
        "error",
        {
            "arrowParens": "always",
            "tabWidth": 4,
            "printWidth": 140,
            "proseWrap": "always",
            "singleQuote": false,
            "trailingComma": "all",
            "useTabs": false,
            "overrides": [
                {
                    "files": "package*.json",
                    "options": {
                        "printWidth": 1000
                    }
                }
            ]
        },
        {
            "usePrettierrc": false
        }
    ]
}
